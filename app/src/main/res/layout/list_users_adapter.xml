<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_default_padding"
    android:padding="@dimen/list_general_margin"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/list_general_margin"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/imageUser"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/list_general_margin"
            android:paddingTop="@dimen/list_general_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/user_list_name_size"
            tools:text="UserName" />

    </RelativeLayout>

</android.support.v7.widget.CardView>