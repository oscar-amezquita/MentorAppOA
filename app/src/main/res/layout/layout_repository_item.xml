<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_separator_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/repoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_general_margin"
        android:textSize="@dimen/user_list_name_size"
        tools:text="a8" />

    <TextView
        android:id="@+id/repoURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_general_margin"
        android:layout_marginTop="@dimen/list_general_margin"
        android:autoLink="web"
        tools:text="https://github.com/aliafshar/a8" />
</LinearLayout>